source ~/.mutt/passes

# Receive

set imap_user = pascal.cc.ernst@gmail.com
set imap_pass = "$my_personal_gmail_pass"

set spoolfile = imaps://imap.gmail.com:993/INBOX
set record = "+[Gmail]/Sent Mail"
mailboxes = +INBOX
set postponed = +[Gmail]/Drafts

set folder = "imaps://pascal.cc.ernst@imap.gmail.com:993"
set ssl_force_tls = yes
set ssl_starttls = yes

# Send

set smtp_url = smtp://$imap_user:$imap_pass@smtp.gmail.com
set realname = "Pascal Ernst"
set from = pascal.cc.ernst@gmail.com
set hostname = "gmail.com"
set use_from = yes

# account-hook $folder "set imap_user=pascal.cc.ernst@gmail.com imap_pass = $my_personal_gmail_pass"
